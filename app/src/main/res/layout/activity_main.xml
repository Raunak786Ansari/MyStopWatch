<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mianpage"

    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:src="@drawable/mianpage"
    android:textAlignment="center"
    tools:context="com.example.stopwatch.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="274dp"
        android:layout_height="102dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="#46D526"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <TextView

            android:id="@+id/time_view"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"


            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="34sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="93dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <Button

            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:background="@drawable/cornor"
            android:onClick="onClickStart"
            android:rotationX="2"
            android:text="@string/start"
            app:cornerRadius="10dp" />

        <Button

            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:background="#D32F2F"
            android:onClick="onClickStop"
            android:text="@string/stop" />

        <Button

            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/cornor"
            android:onClick="onClickReset"
            android:text="@string/reset" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@made By RAUNAK"
        android:textColor="#0097A7"
        android:textColorLink="#BF360C" />

</LinearLayout>